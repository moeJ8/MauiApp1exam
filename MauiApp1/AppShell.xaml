<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <TabBar >

        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="Home"  />
        </Tab>

        <Tab Title="Child" Icon="boy.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page1}" Route="Child"  />
        </Tab>

        <Tab Title="Parent" Icon="boat.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page2}" Route="Parent"  />
        </Tab>

        <Tab Title="Info" Icon="ball.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page3}" Route="Info"  />
        </Tab>

        <Tab Title="Assignment" Icon="final.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page4}" Route="Assignment"  />
        </Tab>

    </TabBar>

</Shell>
